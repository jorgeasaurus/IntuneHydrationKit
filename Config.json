{
  "HydrationSettings": {
    "Description": "Configuration file for Intune Hydration Kit",
    "Version": "1.0.0"
  },
  "Repositories": {
    "OpenIntuneBaseline": "https://github.com/SkipToTheEndpoint/OpenIntuneBaseline",
    "IntuneManagement": "https://github.com/Micke-K/IntuneManagement"
  },
  "Features": {
    "ImportPolicies": true,
    "ImportCompliance": true,
    "ImportSecurityBaselines": true,
    "CreateEnrollmentProfiles": true,
    "CreateDynamicGroups": true,
    "ImportConditionalAccess": true
  },
  "EnrollmentProfiles": {
    "Autopilot": {
      "DisplayName": "Corporate Autopilot Profile",
      "DeviceNameTemplate": "CORP-%SERIAL%",
      "EnableWhiteGlove": true,
      "HidePrivacySettings": true,
      "HideEULA": true,
      "UserType": "standard"
    },
    "ESP": {
      "DisplayName": "Corporate ESP Profile",
      "ShowInstallationProgress": true,
      "TimeoutInMinutes": 60,
      "AllowDeviceUseOnInstallFailure": false
    }
  },
  "DynamicGroups": {
    "CreateOSGroups": true,
    "CreateManufacturerGroups": true,
    "CreateModelGroups": true,
    "CreateAutopilotGroups": true,
    "CreateComplianceGroups": true,
    "Manufacturers": [
      "Microsoft Corporation",
      "Dell Inc.",
      "HP",
      "LENOVO"
    ]
  },
  "ConditionalAccess": {
    "ImportPolicies": true,
    "DefaultState": "disabled",
    "PolicyCount": 10
  },
  "ComplianceBaselines": {
    "Windows": {
      "Enabled": true,
      "PasswordMinLength": 12,
      "OSMinVersion": "10.0.19041",
      "RequireDefender": true
    },
    "iOS": {
      "Enabled": true,
      "PasscodeMinLength": 6,
      "OSMinVersion": "15.0"
    },
    "Android": {
      "Enabled": true,
      "PasswordMinLength": 8,
      "OSMinVersion": "11.0"
    },
    "macOS": {
      "Enabled": true,
      "PasswordMinLength": 12,
      "OSMinVersion": "12.0"
    }
  },
  "Logging": {
    "EnableFileLogging": true,
    "EnableConsoleLogging": true,
    "LogLevel": "INFO"
  }
}
